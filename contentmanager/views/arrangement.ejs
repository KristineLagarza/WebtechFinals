    <script>
    // Function to compile uploaded videos into a single frame
            function compileVideos() {
                const videoContainer = document.querySelector('.big-video-container');

                // Get all uploaded video elements
                const uploadedVideos = document.querySelectorAll('.video-player');

                // Create a container to hold all compiled videos
                const compiledVideosContainer = document.createElement('div');
                compiledVideosContainer.classList.add('compiled-videos');

                // Loop through each uploaded video and append it to the compilation container
                uploadedVideos.forEach((video) => {
                    const clonedVideo = video.cloneNode(true); // Clone the uploaded video
                    compiledVideosContainer.appendChild(clonedVideo);
                });

                // Clear previous videos before appending new ones
                videoContainer.innerHTML = '';

                // Append the compilation container to the main compiled video frame
                videoContainer.appendChild(compiledVideosContainer);
            }

            // Event listener for the Confirm Compilation button
            document.getElementById('confirmCompilation').addEventListener('click', function() {
                compileVideos(); // Call the compileVideos function when the button is clicked
            });


  document.addEventListener('DOMContentLoaded', function() {
    const fileInputs = document.querySelectorAll('.file-input');

    // Function to handle file input change for video players
    function handleFileInput(fileInput) {
        fileInput.addEventListener('change', function(event) {
            const file = event.target.files[0];
            const containerId = fileInput.getAttribute('data-container-id');
            const videoPlayer = document.querySelector(`#${containerId} .video-player`);

            if (file && videoPlayer) {
                const videoURL = URL.createObjectURL(file);
                videoPlayer.src = videoURL;
            }
        });
    }

    // Inside the DOMContentLoaded event listener
document.addEventListener('DOMContentLoaded', function() {
